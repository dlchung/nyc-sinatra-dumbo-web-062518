<h1>Figures</h1>
<p><a href="/figures/new">New</a></p>

<ol>
  <% @figures.each do |figure| %>
  <li><h2><a href="/figures/<%= figure.id %>"><%= figure.name %></h2></a></li>
  <h3>Titles</h3>
    <ul>
      <% figure.titles.each do |title| %>
        <li><%= title.name %></li>
      <% end %>
    </ul>
  <h3>Landmarks</h3>
    <ul>
      <% figure.landmarks.each do |landmark| %>
        <li><%= landmark.name %></li>
      <% end %>
    </ul>
  <% end %>
</ol>
